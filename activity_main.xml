<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inputpane"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lulu.myapplication.MainActivity">

    <ListView
        android:id="@+id/pairedList"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

    <TextView
        android:id="@+id/status"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_below="@+id/info"
        android:layout_marginTop="34dp"
        android:layout_toEndOf="@+id/info"
        android:layout_toRightOf="@+id/info"
        android:text="Lettre reÃ§ue" />

    <EditText
        android:id="@+id/input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/send"
        android:text="EditText" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="32dp"
        android:text="info tel" />

    <Button
        android:id="@+id/send"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/pairedList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="envoyer texte " />

    <Button
        android:id="@+id/m_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pairedList"
        android:layout_alignLeft="@+id/info"
        android:layout_alignStart="@+id/info"
        android:layout_marginBottom="30dp"
        android:text="Son ON" />

    <Button
        android:id="@+id/m_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/m_play"
        android:layout_alignBottom="@+id/m_play"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:text="SON OFF" />

</RelativeLayout>
